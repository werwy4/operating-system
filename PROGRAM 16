#include <stdio.h>

struct Employee {
    int id;
    char name[30];
    float salary;
};

int main() {
    FILE *file = fopen("employees.dat", "rb+");
    if (!file) {
        printf("Error opening file.\n");
        return 1;
    }

    struct Employee emp;
    emp.id = 1;
    snprintf(emp.name, sizeof(emp.name), "John Doe");
    emp.salary = 50000;

    // Write employee data
    fseek(file, (emp.id - 1) * sizeof(struct Employee), SEEK_SET);
    fwrite(&emp, sizeof(struct Employee), 1, file);

    // Read employee data
    fseek(file, (emp.id - 1) * sizeof(struct Employee), SEEK_SET);
    fread(&emp, sizeof(struct Employee), 1, file);

    printf("Employee ID: %d\nName: %s\nSalary: %.2f\n", emp.id, emp.name, emp.salary);

    fclose(file);
    return 0;
}

output:
Error opening file.
