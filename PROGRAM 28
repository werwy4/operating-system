#include <stdio.h>
#include <string.h>

int main(int argc, char *argv[]) {
    FILE *file;
    char line[1024];

    if (argc != 3) {
        printf("Usage: %s <filename> <pattern>\n", argv[0]);
        return 1;
    }

    file = fopen(argv[1], "r");
    if (!file) {
        perror("Error opening file");
        return 1;
    }

    while (fgets(line, sizeof(line), file)) {
        if (strstr(line, argv[2])) {
            printf("%s", line);
        }
    }

    fclose(file);
    return 0;
}
output:
Usage: /tmp/1EYuzrCWu3/main.o <filename> <pattern>
